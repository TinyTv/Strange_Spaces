//Attack animations
// Change sprite based on what direction we're facing
 if (moveDirection = 2) 
{
	sprite_index = spPlayer_attack_left;		
}
	
if (moveDirection = 0)
{
	sprite_index = spPlayer_attack_right;		
}
	
if (moveDirection = 1)
{
	sprite_index = spPlayer_attack_up;
		
}
	
if (moveDirection = 3)
{
	sprite_index = spPlayer_attack_down;
}

